{
  "manifest_version": 2,
  "name": "Friendly Voice",
  "version": "1.2",
  "description": "Makes Google Voice a little friendlier when you type more than 320 characters.",
  "icons": { "16": "Icons/Logo16.png",
			 "32": "Icons/Logo32.png",
             "48": "Icons/Logo48.png",
            "128": "Icons/Logo128.png" },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/voice*"],
      "js": ["script.js"],
	  "css": ["style.css"]
    }
  ]
}